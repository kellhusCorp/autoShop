@model Autoshop.Web.Models.ProductDto[]?

@{
    ViewBag.Title = "List of products";
    Layout = "_Layout";
}

<div class="container pt-4 border">
    <div class="row pb-2">
        <div class="col">
            <h2 class="text-info">Products list</h2>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Create" class="btn btn-outline-info">
                <i class="oi oi-plus">
                    Create new  product
                </i>
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Category name    
            </th>
            <th>
                Price
            </th>
            <th>
                    
            </th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @item.Price.ToString("c")
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Product" class="btn btn-success" asp-route-productId="@item.ProductId">
                            <i class="oi oi-pencil"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="Product"  class="btn btn-danger" asp-route-productId="@item.ProductId">
                            <i class="oi oi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
